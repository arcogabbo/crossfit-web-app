<!DOCTYPE html>
<html>
<head>
	<title>Agenda personale</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="/css/dashboard_style.css">
	<link rel="stylesheet" href="/css/materialize.min.css">
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
	<script src="/js/diary_script.js" type="text/javascript"></script>
</head>
<body>
	<%- include ('bar.ejs') %>

  	<!-- COLLAPSIBLE -->
	<div class="container">
	<h4 class="flow-text">Sezione modifica diario</h4>
	<ul class="collapsible black-text grey lighten-2">
		<li>
			<div class="collapsible-header">
				<i class="material-icons">event_note</i>
				Inserisci pagina
			</div>
			<div class="collapsible-body">
				<div class="input-field">
					<select id="lesson_select">
					 	<option value="" disabled selected>Scegli lezione:</option>
						<% for (var i in to_insert) { %>
							<option value="<%= to_insert[i].id %>_<%= to_insert[i].start_date %>"><%= to_insert[i].format_date %></option>
						<% } %>
					</select>
				</div>
				<div class="input-field">
					<textarea id="content-area" class="materialize-textarea" data-length="150"></textarea>
					<label for="content-area">Contenuto:</label>
				</div>
				<button id="diary_add_btn" class="btn waves-effect waves-light deep-orange darken-3">Inserisci pagina</button>
			</div>
		</li>
		<li>
			<div class="collapsible-header">
				<i class="material-icons">description</i>
				Aggiorna pagina
			</div>
			<div class="collapsible-body">
				<div class="input-field">
					<select id="lesson_update_select">
					 	<option value="" disabled selected>Scegli lezione:</option>
						<% for (var i in to_update) { %>
							<option value="<%= to_update[i].id %>"><%= to_update[i].format_date %></option>
						<% } %>
					</select>
				</div>
				<div class="input-field">
					<textarea id="content-update-area" class="materialize-textarea" data-length="150"></textarea>
					<label for="content-area">Contenuto:</label>
				</div>
				<button id="diary_update_btn" class="btn waves-effect waves-light deep-orange darken-3">Aggiorna pagina</button>
			</div>
		</li>
	</ul>

	<h4 class="flow-text">Sezione visione diario</h4>
	<ul id="page_view" class="collapsible black-text grey lighten-2">

	</ul>
	</div>

	<%- include ('admin_button.ejs') %>

	<script type="text/javascript" src="/js/materialize.min.js"></script>
</body>