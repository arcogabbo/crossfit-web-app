	<div class="fixed-action-btn click-to-toggle horizontal">
	  	<a class="btn-floating btn-large red">
	    	<i class="large material-icons">mode_edit</i>
	  	</a>
	  	<ul>
	  		<li><a class="btn-floating pink darken-2" href="/profile/<%= user.id %>"><i class="material-icons">account_box</i></a></li>
	  		<% if (user.is_admin) { %>
	    	<li><a class="btn-floating green" href="/administrate/lessons"><i class="material-icons">book</i></a></li>
	    	<li><a class="btn-floating blue" href="/administrate/certificates"><i class="material-icons">assignment</i></a></li>
	    	<li><a class="btn-floating yellow darken-3" href="/administrate"><i class="material-icons">verified_user</i></a></li>
